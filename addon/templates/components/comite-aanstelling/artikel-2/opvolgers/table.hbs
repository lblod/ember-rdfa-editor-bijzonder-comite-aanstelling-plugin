<table class="data-table data-table--lined data-table--bordered data-table--white u-spacer--top--tiny">
  <thead>
    <tr>
      <th>Plaats opvolging</th>
      <th>
        OfficiÃ«le naam opvolger
      </th>
      <th>
        <div class="grid">
          <div class="col--3-12">
            Actie
          </div>
          <div class="col--9-12 u-align--right">
            {{#wu-link-button class="button--small" isNarrow=true onClick=(action "addMandataris")}}
              Voeg opvolger toe
            {{/wu-link-button}}
          </div>
        </div>
      </th>
    </tr>
  </thead>
  <tbody>

    {{#if sortedMandatarissen}}
      {{#each sortedMandatarissen as |mandataris|}}
        {{comite-aanstelling/artikel-2/opvolgers/table-row mandataris=mandataris onRemove=(action "onRemove") comiteMandaat=comiteMandaat}}
      {{/each}}
    {{else}}
      {{#unless addMandatarisMode}}
        <tr>
          <td colspan="3">Geen opvolgers aangeduid.</td>
        </tr>
      {{/unless}}
    {{/if}}

    {{#if addMandatarisMode}}
      {{comite-aanstelling/artikel-2/opvolgers/add-mandataris
        onCancel=(action "cancelAddMandataris")
        onSave=(action "saveAddMandataris")
        bestuursorgaan=bestuursorgaan
        mandatarissen=mandatarissen
        kandidaatOpvolgers=kandidaatOpvolgers
        comiteMandaat=comiteMandaat
      }}
    {{/if}}
  </tbody>
</table>
